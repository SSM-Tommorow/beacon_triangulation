<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hyeonseob.beacontriangulation" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service android:name="com.perples.recosdk.RECOBeaconService" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.hyeonseob.beacontriangulation.RECOMonitoringActivity"/>
        <activity android:name="com.example.hyeonseob.beacontriangulation.RECORangingActivity"/>
        <service android:name="com.example.hyeonseob.beacontriangulation.RECOBackgroundMonitoringService"/>
        <service android:name="com.example.hyeonseob.beacontriangulation.RECOBackgroundRangingService"/>

    </application>

</manifest>
